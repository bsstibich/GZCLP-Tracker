<ToolBarC@BoxLayout>:

    MDToolbar:
        md_bg_color: (.108, .114, .126, 1)
        FloatLayout:
            

            MDIconButton:
                icon:'home'
                elevation: 0
                #md_bg_color: app.theme_cls.primary_color
                user_font_size: "40sp"
                on_release: app.root.current = 'hometab'
            MDIconButton:
                icon:'weight-lifter'
                elevation: 0
                #md_bg_color: app.theme_cls.primary_color
                user_font_size: "40sp"
                on_release: app.root.current = 'workouttab'
                pos_hint:{'center_x':.02}
            MDIconButton:
                icon:'settings-outline'
                elevation: 0
                #md_bg_color: app.theme_cls.primary_color
                user_font_size: "40sp"
                text_color: app.theme_cls.primary_color
                on_release: app.root.current = 'settingstab'
                pos_hint:{'x':.7}